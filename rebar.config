{erl_opts, [warnings_as_errors,
            warn_export_all]}.

{xref_checks, [undefined_function_calls]}.
{cover_enabled, true}.

{edoc_opts, [{doclet, edown_doclet},
             {dialyzer_specs, all},
             {report_missing_type, true},
             {report_type_mismatch, true},
             {pretty_print, erl_pp},
             {preprocess, true}]}.

{deps, [
        {eredis, ".*",  {git, "git://github.com/AmazeGame/eredis.git", {tag, "v1.2.0"}}},
        {poolboy, ".*", {git, "git://github.com/AmazeGame/poolboy.git", {branch, "master"}}}
       ]
    }.
